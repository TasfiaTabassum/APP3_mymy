<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:onClick="profileSettingActivity"
    tools:context=".MainActivity"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="80dp">

        <Button
            android:id="@+id/buttonprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="profileSettingActivity"
            android:text="Profile Setting"
            android:backgroundTint="@color/bright_purple_pink"
            />

        <Button
            android:id="@+id/btnapppermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="appsetusagepermissionActivity"
            android:text="App Usage Permission"
            android:backgroundTint="@color/bright_purple_pink"
            />

        <Button
            android:id="@+id/buttonapplocker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="appprivacysettingActivity"
            android:text="Set app privacy"
            android:backgroundTint="@color/bright_purple_pink"
            />

        <Button
            android:id="@+id/buttontimeslot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin = "5dp"
            android:backgroundTint="@color/bright_purple_pink"
            android:onClick="btntimeslotsetting"
            android:text="Time slot settings" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_out_btn"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/bright_purple_pink"
            android:text="Sign out"/>

    </LinearLayout>
</RelativeLayout>